@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16


.likearts-content .wj-video-item
	display block
	position relative
	overflow hidden
	&:hover
		&:before
			background-color rgba(0, 0, 0, 0)
		.wj-video-item__icon
			transform translate(-50%, -50%) scale(1.2)
			color #fff
			text-shadow 0px 0px 30px #000

	&:before
		content ''
		position absolute
		z-index 1
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(0, 0, 0, 0.2)
		transition all .2s ease-in-out

	&__pic
		width 100%
		height 100%
		max-width 100%
		object-fit cover
		transition all .2s ease-in-out

	&__icon
		position absolute
		z-index 2
		top 50%
		left 50%
		transform translate(-50%, -50%)
		font-size 'calc(80 / %s * 1rem)' %($base-font)
		color $color-primary
		transition all .2s ease-in-out
		transform-origin center center
