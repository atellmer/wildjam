@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16


.likearts-content .custom-modal

	&__close-btn
		display inline-block
		position absolute
		top 0
		right 0
		z-index 3000
		@media (max-width $tablet)
			right 0

	&__btn
		padding 16px
		font-size 'calc(16 / %s * 1rem)' % ($base-font)

	&__textarea
		min-height 150px
		@media (max-width 900px)
			min-height 100px
		@media (max-width $phone)
			min-height 80px