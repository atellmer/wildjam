@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .wj-social-icon
	display inline-block
	position relative
	width 42px
	height 42px
	background-size cover
	background-position center
	background-repeat no-repeat
	border-radius 50%

	&--yt
		background-image url('../../images/icons/svg/youtube.svg')

	&--vk
		background-image url('../../images/icons/svg/vk.svg')

	&--insta
		background-image url('../../images/icons/svg/instagram.svg')