@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .slider
	position relative
	width 100%
	height auto

	&__item
		width 100%
		height auto
		max-width 100%
		min-height 780px
		object-fit cover
		@media (max-width $phone)
			min-height 0

	.slick-slide, .slick-slide *
		outline none !important