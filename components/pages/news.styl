@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .news
	position relative
	width 100%
	height auto
	min-height 800px
	background-color #f4f6f8
	padding 0 0 100px 0

	&__container
		overflow hidden
		padding 0 15px

	&__breadcrumbs
		position relative
		padding 61px 0 48px 0
		@media (max-width $tablet)
			padding 30px 0

	&__title
		text-align left
		margin-bottom 37px
		@media (max-width $phone)
			font-size 'calc(20 / %s * 1rem)' %($base-font)
			margin-bottom 15px

	&__cards
		position relative
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items stretch
		margin 0 -15px 40px -15px
		padding 20px 0

	&__card
		width calc(33.3333% - 30px)
		height auto
		margin 15px
		transition all .2s ease-in-out
		@media (max-width $notebook)
			width calc(50% - 30px)
		@media (max-width $phone)
			width calc(100% - 30px)

	&__pagination
		position relative
		padding 15px 0

	&__card
		.card__desc
			@media (max-width $phone)
				padding 30px
		&:hover
			box-shadow 0 15px 29px rgba(75, 125, 156, 0.17)

	&__card-date
		color #9c9cac
		font-size 'calc(14 / %s * 1rem)' %($base-font)
		font-weight 400
		margin-bottom 21px

	&__card-title
		color $color-text
		font-size 'calc(18 / %s * 1rem)' %($base-font)
		font-weight 500
		line-height 1.2
		margin-bottom 24px
		@media (max-width $phone)
			font-size 'calc(16 / %s * 1rem)' %($base-font)

	&__card-link
		color $color-primary
		font-size 'calc(16 / %s * 1rem)' %($base-font)
		font-weight 500
		text-decoration underline
		transition color .2s ease-in-out

		&:hover
			color #BDBDBD
