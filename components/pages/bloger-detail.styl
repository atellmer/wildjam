@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .bloger-detail
	position relative
	width 100%
	height auto
	min-height 100vh
	background-color #f4f6f8
	padding 0 0 100px 0
	@media (max-width $notebook)
		padding 0 0 70px 0

	&__container
		overflow hidden
		padding 0 15px

	&__breadcrumbs
		position relative
		padding 61px 0 48px 0
		@media (max-width $tablet)
			padding 30px 0

	&__title
		text-align left
		margin-bottom 37px
		@media (max-width $phone)
			font-size 'calc(20 / %s * 1rem)' %($base-font)
			margin-bottom 15px

		&--h3
			text-align center
			margin-bottom 40px
			@media (max-width $phone)
				margin-bottom 15px

	&__bloger-card
		margin-bottom 78px

	&__cards
		position relative
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items stretch
		margin 0 -15px
		padding 20px 0
		@media (max-width $notebook)
			margin 0 -15px 80px -15px

	&__card
		width calc(33.3333% - 30px)
		height auto
		margin 15px
		transition all .2s ease-in-out
		@media (max-width $notebook)
			width calc(50% - 30px)
		@media (max-width $phone)
			width calc(100% - 30px)

	&__pagination
		position relative
		padding 15px 0
		display none

	&__videos
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items stretch
		margin 0 -15px 77px -15px

	&__videos-item
		width calc(33.3333% - 30px)
		height 243px
		margin 15px
		transition all .2s ease-in-out
		@media (max-width $notebook)
			width calc(50% - 30px)
		@media (max-width $phone)
			width calc(100% - 30px)

.likearts-content .bloger-detail .bloger-card
	position relative
	width 100%
	height auto
	background-color #fff
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items stretch
	@media (max-width $phone)
		flex-flow column wrap

	&__slider
		width 50%
		height auto
		@media (max-width $phone)
			width 100%

	&__detail
		width 50%
		height auto
		padding 47px
		@media (max-width 1140px)
			padding 30px
		@media (max-width $phone)
			width 100%

	&__title
		color $color-text
		font-size 'calc(30 / %s * 1rem)' %($base-font)
		font-weight 700
		margin-bottom 36px
		@media (max-width $tablet)
			font-size 'calc(26 / %s * 1rem)' %($base-font)
		@media (max-width $phone)
			font-size 'calc(20 / %s * 1rem)' %($base-font)
	
	&__social
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
		border-top 1px solid #e6e6e6
		border-bottom 1px solid #e6e6e6
		padding 34px 0 19px 0
		margin-bottom 20px
		@media (max-width 1140px)
			flex-flow column wrap
			align-items flex-start

	&__social-link
		display flex
		flex-flow row nowrap
		justify-content flex-start
		align-items center
		text-decoration none
		width 50%
		margin-bottom 15px
		@media (max-width 1140px)
			width 100%
		&:hover
			.bloger-card__social-subs
				color $color-primary
			.bloger-card__social-sign
				color $color-primary

	&__social-data
		padding 7px 14px

	&__social-subs
		color $color-text
		font-size 'calc(20 / %s * 1rem)' %($base-font)
		font-weight 900
		transition color .2s ease-in-out
		@media (max-width 1140px)
			font-size 'calc(18 / %s * 1rem)' %($base-font)

	&__social-sign
		color $color-text
		font-size 'calc(14 / %s * 1rem)' %($base-font)
		font-weight 400
		transition color .2s ease-in-out

	&__info-title
		color $color-text
		font-size 'calc(22 / %s * 1rem)' %($base-font)
		font-weight 700
		line-height 1.2
		margin-bottom 28px

	&__info-data
		font-size 'calc(16 / %s * 1rem)' %($base-font)
		font-weight 300
		line-height 1.38
		max-height 200px
		overflow auto
		@media (max-width $phone)
			max-height none

		p
			color $color-text
			margin 0 0 34px 0

		a
			color $color-primary
			text-decoration underline

	&__c-btn
		margin-top 60px
		@media (max-width $notebook)
			margin-top 30px

	&__link
		display block

	&__btn
		padding 27px 66px
		@media (max-width 1140px)
			width 100%
			padding 16px 20px
			font-size 'calc(16 / %s * 1rem)' %($base-font)
