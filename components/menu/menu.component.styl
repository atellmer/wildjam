@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .menu-desktop
	position relative
	@media (max-width $tablet)
		width 100%

	&__list
		width 100%
		height auto
		list-style none
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
		padding 0
		margin 0
		@media (max-width 1140px)
			justify-content center
		@media (max-width $tablet)
			border-top 1px solid #E0E0E0

	&__list-item
		color #181818
		font-size 'calc(13 / %s * 1rem)' %($base-font)
		font-weight 500
		line-height 2.15
		text-transform uppercase
		padding 0 27px
		letter-spacing 1px
		@media (max-width $tablet)
			width 50%
			text-align center
			border-bottom 1px solid #E0E0E0
			padding 0 15px
			font-size 'calc(11 / %s * 1rem)' %($base-font)

	&__list-link
		display inline-block
		color #181818
		padding 15px 0
		text-decoration none
		@media (max-width $tablet)
			padding 10px 0

		&:hover
			text-decoration underline

		&.is-active
			color $color-primary

.likearts-content .menu-mobile
	position fixed
	top 0
	left 0
	z-index 100
	width 100%
	height auto
	min-height 48px
	display flex
	flex-flow row wrap
	justify-content center
	align-items center
	background-color rgba(255, 255, 255, 0.8)
	box-shadow 0 1px 6px rgba(0,0,0,0.06), 0 1px 4px rgba(0,0,0,0.06)

	&__btn
		position absolute
		top 0
		left 0
		width 48px
		height 48px
		cursor pointer
		z-index 100
		transition .2s ease-in-out

		&.is-open
			.hamburger-icon::before
				transform rotate(-45deg)
			.hamburger-icon::after
				transform rotate(45deg)
			.hamburger-icon
				transform rotate(90deg)
				background-color transparent

	&__icon
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		color $color-text

	.hamburger-icon
		display inline-block
		width 20px
		height 2px
		background-color $color-text
		position absolute
		top 50%
		left 50%
		transition all .2s ease-in-out
		transform translate(-50%, -50%)
		transform-origin 4px -5px
		&::before, &::after
			content ''
			position absolute
			width 20px
			height 2px
			background-color $color-text
			transition all .2s ease-in-out
			transform-origin 50% 50%
			
		&::before	
			transform translateY(-5px)
			
		&::after	
			transform translateY(5px)

	&__list
		display block
		position fixed
		top 0
		left 0
		z-index 99
		transition all .2s ease-in-out
		transform translateX(-240px)
		width 240px
		height 100%
		background-color #fff
		list-style none
		padding 50px 0 0 0
		margin 0
		font-size 'calc(11 / %s * 1rem)' %($base-font)
		font-weight 500
		text-transform uppercase
		overflow-y auto

	&__list-item
		border-bottom 1px solid #F5F5F5
		transition all .2s ease-in-out
		&:hover
			background-color #eee

	&__list-item.is-active
		background-color #eee
		.menu-mobile__list-link
			color $color-text

	&__list-link
		display block
		color $color-text
		padding 16px
		text-decoration none

	&__overlay
		display none
		position fixed
		top 0
		left 0
		z-index 98
		width 100%
		height 100%
		background-color #000
		opacity .5
