@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .case-show
	position relative
	width calc(100% + 16px)
	height auto
	min-height 220px
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items stretch
	margin 0 -8px
	padding 42px 0
	@media (max-width $tablet)
		padding 8px 0 30px 0

	&__item
		position relative
		width calc(33.3333% - 16px)
		height auto
		min-height 189px
		margin 8px
		text-decoration none
		background-color #ccc
		transition all .2s ease-in-out
		transform-origin 0 0
		@media (max-width $tablet)
			width calc(50% - 16px)
		@media (max-width 480px)
			width calc(100% - 16px)

		&.js-is-hide
			position absolute
			visibility hidden

		&.js-is-animatable
			animation-name case-show-item-motion
			animation-duration .2s
			animation-iteration-count 1
			animation-timing-function ease-in-out
			animation-fill-mode forwards
			animation-direction normal

	&__item-pic
		display block
		width 100%
		height 100%
		max-height 206px
		min-height inherit
		object-fit cover

	&__item-cover
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		background-color rgba(0, 0, 0, 0.7)
		display flex
		flex-flow column wrap
		justify-content center
		align-items center
		transition background-color .2s ease-in-out
		padding 15px
		overflow hidden
		&:hover
			background-color rgba(0, 0, 0, 0)

	&__item-title
		text-shadow 0 0 30px rgba(0, 0, 0, 0.6)
		color #fff
		font-size 'calc(30 / %s * 1rem)' %($base-font)
		font-weight 700
		line-height 1
		text-transform uppercase
		margin-bottom 12px
		text-align center
		@media (max-width 900px)
			font-size 'calc(24 / %s * 1rem)' %($base-font)


	&__item-count
		text-shadow 0 0 30px rgba(0, 0, 0, 0.6)
		color #fff
		font-size 'calc(20 / %s * 1rem)' %($base-font)
		font-weight 400
		line-height 1
		text-transform uppercase
		margin-bottom 2px

	&__item-sign
		opacity 0.7
		text-shadow 0 0 30px rgba(0, 0, 0, 0.6)
		color #fff
		font-size 'calc(9 / %s * 1rem)' %($base-font)
		font-weight 400
		line-height 1.33
		text-transform uppercase

@keyframes case-show-item-motion
	0%
		transform scale(1, 0)
		opacity 0

	100%
		transform scale(1, 1)
		opacity 1

.likearts-content .case-show-btn
		position absolute
		left 50%
		bottom 0
		transform translate(-50%, 50%)
		z-index 10
		box-shadow 0 17px 30px rgba(229, 229, 229, 0.35)
		border 4px solid #f5f5f5
		border-radius 23px
		background-color #fff
		padding 16px 49px
		color $color-text
		font-family 'GothamPro', sans-serif
		font-size 'calc(12 / %s * 1rem)' %($base-font)
		font-weight 700
		text-transform uppercase
		transition all .2s ease-in-out
		white-space nowrap
		@media (max-width $phone)
			padding 16px 30px
		&:hover
			cursor pointer
		&:focus
			outline none
		&:active
			transform translate(-50%, 50%) scale(0.9)
