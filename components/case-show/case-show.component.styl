@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .case-show
	position relative
	width calc(100% + 16px)
	height auto
	min-height 220px
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items stretch
	margin 0 -8px
	padding 42px 0
	@media (max-width $tablet)
		padding 8px 0 30px 0

	&__item
		position relative
		width calc(33.3333% - 16px)
		height auto
		min-height 189px
		margin 8px 8px 50px 8px
		text-decoration none
		background-color #ccc
		transition all .2s ease-in-out
		transform-origin 0 0
		@media (max-width $tablet)
			width calc(50% - 16px)
		@media (max-width $container-width)
			margin 8px
		@media (max-width 480px)
			width calc(100% - 16px)
		&:hover
			box-shadow 0 5px 30px rgba(39, 39, 87, 0.2)

		&.js-is-hide
			position absolute
			visibility hidden

		&.js-is-animatable
			animation-name case-show-item-motion
			animation-duration .2s
			animation-iteration-count 1
			animation-timing-function ease-in-out
			animation-fill-mode forwards
			animation-direction normal

	&__item-pic
		display block
		width 100%
		height 100%
		max-height 206px
		min-height inherit
		object-fit cover

	&__item-cover
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		background-color rgba(0, 0, 0, 0.7)
		display flex
		flex-flow column nowrap
		justify-content center
		align-items center
		transition background-color .2s ease-in-out
		padding 15px
		overflow hidden
		&:hover
			background-color rgba(255, 255, 255, 0.9)
			.case-show__item-name,
			.case-show__item-separator,
			.case-show__item-title,
			.case-show__item-count,
			.case-show__item-sign
				color $color-text

	&__item-badge
		position relative
		width 100%
		display flex
		flex-flow row wrap
		justify-content center
		align-items center
		margin-bottom 12px

	&__item-avatar
		width 25px
		height 25px
		object-fit cover
		border-radius 50%
		margin-bottom 2px

	&__item-name
		color #fff
		transition color .2s ease-in-out
		font-size 'calc(12 / %s * 1rem)' %($base-font)
		font-weight 400
		line-height 1.17
		text-transform uppercase
		margin-left 11px
		text-align center
		display flex
		flex-flow row wrap
		justify-content center
		align-items center

	&__item-icon
		width 25px !important
		height 25px !important

	&__item-separator
		color #fff
		font-size 'calc(16 / %s * 1rem)' %($base-font)
		font-weight 400
		line-height 1
		margin 0 8px
		transition color .2s ease-in-out

	&__item-title
		color #fff
		font-size 'calc(30 / %s * 1rem)' %($base-font)
		font-weight 700
		line-height 1
		text-transform uppercase
		margin-bottom 12px
		text-align center
		transition color .2s ease-in-out
		@media (max-width 900px)
			font-size 'calc(24 / %s * 1rem)' %($base-font)


	&__item-count
		color #fff
		font-size 'calc(20 / %s * 1rem)' %($base-font)
		font-weight 400
		line-height 1
		text-transform uppercase
		margin-bottom 2px
		transition color .2s ease-in-out

	&__item-sign
		opacity 0.7
		color #fff
		font-size 'calc(9 / %s * 1rem)' %($base-font)
		font-weight 400
		line-height 1.33
		text-transform uppercase
		transition color .2s ease-in-out

@keyframes case-show-item-motion
	0%
		transform scale(1, 0)
		opacity 0

	100%
		transform scale(1, 1)
		opacity 1

.likearts-content .case-show-btn
		position absolute
		left 50%
		bottom 0
		transform translate(-50%, 50%)
		z-index 10
		border none
		border-radius 20px
		background-color #fff
		padding 16px
		box-shadow 0 0 1px rgba(0,0,0,0.06)
		color $color-text
		font-family 'GothamPro', sans-serif
		font-size 'calc(17 / %s * 1rem)' %($base-font)
		font-weight 400
		line-height 1
		transition all .2s ease-in-out
		white-space nowrap
		margin 3px
		@media (max-width $phone)
			padding 16px 30px
		&:hover
			cursor pointer
			box-shadow 0 1px 6px rgba(0,0,0,0.06), 0 1px 4px rgba(0,0,0,0.06)
		&:focus
			outline none
		&:active
			transform translate(-50%, 50%) scale(0.9)
