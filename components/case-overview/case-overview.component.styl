@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .case-overview
	width 100%
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items stretch

	&__item
		width calc(50% - 8px)
		display flex
		flex-flow column wrap
		justify-content flex-start
		align-items flex-start
		margin-right 8px
		overflow hidden
		@media (max-width $phone)
			width 100%
			margin-right 0

		&:nth-child(1),
		&:nth-child(2)
			margin-bottom 30px

		&:nth-child(3)
			@media (max-width $phone)
				margin-bottom 38px

	&__brand
		width 100%
		height auto
		margin-bottom 8px
		display flex

	&__brand-pic
		display block
		width 100%
		height 100%
		max-width 196px
		object-fit cover

	&__format
		display flex
		flex-flow row nowrap
		justify-content flex-start
		align-items center
		width 100%
		margin-bottom 8px

	&__format-icon
		flex-shrink 0
		display inline-block
		width 16px
		height 16px
		background-size cover
		background-repeat no-repeat
		background-position center
		background-image url('../../images/icons/svg/check.svg')
		margin-right 8px

	&__format-name
		flex-shrink 1
		color #000
		font-size 'calc(12 / %s * 1rem)' %($base-font)
		font-weight 700
		line-height 1.17
		text-transform uppercase
		margin-top 1px

	&__social
		width calc(100% - 8px)
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
		margin -4px

	&__social-icon
		margin 4px
		filter grayscale(1)
		opacity 0.2

		&.is-active
			filter none
			opacity 1
