@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .case-card
	position relative
	width 100%
	height auto
	background-color transparent
	overflow hidden

	&__content
		padding 44px 33px
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items stretch
		background-color #fff
		@media (max-width 980px)
			margin 0
		@media (max-width $tablet)
			margin-top 15px
			padding 0 30px 30px 30px
		@media (max-width $phone)
			padding 0 15px 15px 15px

	&__separator
		width 100%
		height 1px
		border-top 1px dotted #e6e6e6
		margin 38px 0

	&__content-col
		width calc(50% - 30px)
		margin 0 15px
		@media (max-width 980px)
			width 100%
			margin 0

		&--45
			width calc(45% - 30px)
			@media (max-width 980px)
				width 100%

		&--55
			width calc(55% - 30px)
			@media (max-width 980px)
				width 100%

	&__detail
		@media (max-width 980px)
			margin-top 30px

	&__video
		position relative
		width auto
		height auto
		min-height 340px
		display flex
		flex-flow row wrap
		align-items flex-start
		justify-content center
		transition opacity .4s ease-in-out
		@media (max-width $tablet)
			margin 0 -30px
		@media (max-width $phone)
			margin 0 -15px
			min-height 270px

		&.js-is-hide
			height 100%

			.case-card__video-item
				height 0px !important

			.wj-loader
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)

	&__video-item
		width 100%
		height 270px
		@media (max-width $phone)
			height 200px

	.slick-list
		margin-bottom 20px

	.slick-dots
		padding 0
		list-style none
		display inline-flex
		flex-flow row wrap
		justify-content flex-end
		align-items center

		li
			button
				position relative
				font-size 0
				line-height 0
				display block
				width 20px
				height 20px
				padding 5px
				cursor pointer
				color transparent
				border 0
				outline none
				background transparent

			:before
				content ''
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
				width 8px
				height 8px
				background-color #cfdae0
				border-radius 50%

	li.slick-active
		:before
			width 20px
			height 20px
			background-color #fff
			border 6px solid $color-primary

	&__dots-sign
		color $color-primary
		font-size 'calc(12 / %s * 1rem)' %($base-font)
		font-weight 900
		line-height 1.33
		text-transform uppercase
		margin-right 8px
		@media (max-width $tablet)
			display none

	&__date-sign
		color $color-text
		font-size 'calc(12 / %s * 1rem)' %($base-font)
		font-weight 700
		line-height 1.58
		margin-top 20px
		@media (max-width 980px)
			text-align center
			margin-top 14px
	
	&__desc
		margin-top 40px
		padding-left 19px
		border-left 3px solid $color-primary
		@media (max-width $phone)
			margin-top 20px

		p
			color $color-text
			font-size 'calc(14 / %s * 1rem)' %($base-font)
			font-weight 300
			line-height 1.46
			margin 0 0 10px 0


	&__subtitle
		color $color-text
		font-size 'calc(12 / %s * 1rem)' %($base-font)
		font-weight 400
		line-height 1.17
		text-transform uppercase
		margin-bottom 11px
		@media (max-width 980px)
			text-align center
		@media (max-width $phone)
			font-size 'calc(10 / %s * 1rem)' %($base-font)
