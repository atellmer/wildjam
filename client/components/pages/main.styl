@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .section-1
	position relative
	z-index 1
	width 100%
	height auto
	background-color #f6f9fc
	background-image url('../../images/pages/main/bg.jpg')
	background-size cover
	background-position center
	background-repeat no-repeat
	@media (max-width $tablet)
		padding 30px 15px
	@media (max-width $phone)
		padding 15px

	&__container
		width 100%
		height 100%
		display flex
		flex-flow row wrap
		justify-content center
		align-items center
		min-height 100vh
		@media (max-width 1140px)
			min-height calc(100vh - 200px)
		@media (max-width $tablet)
			min-height 0

	&__content
		margin-top -25px
		display flex
		flex-flow column wrap
		justify-content center
		align-items center
		@media (max-width $tablet)
			margin-top 0

	&__logo-container
		position relative
		top 11px
		width auto
		height auto

	&__logo
		width 100%
		height 100%
		max-width 373px
		max-height 296px
		object-fit cover
		transition all .2s ease-in-out
		@media (max-width $tablet)
			max-width calc(373 / 1.5 * 1px)
			max-height calc(296 / 1.5 * 1px)
		@media (max-width $phone)
			max-width calc(373 / 2 * 1px)
			max-height calc(296 / 2 * 1px)

	&__title
		margin 80px 0 64px 0
		@media (max-width 1650px)
			margin 40px 0
		@media (max-width 1140px)
			margin 30px 0

	&__desc
		color $color-text
		font-size 'calc(20 / %s * 1rem)' %($base-font)
		font-weight 400
		line-height 1.5
		text-align center
		margin 0 0 48px 0
		@media (max-width 940px)
			font-size 'calc(16 / %s * 1rem)' %($base-font)

	&__mail
		width 100%
		height auto
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
		padding 49px 62px
		margin-top -110px
		@media (max-width 1140px)
			margin-top 0
		@media (max-width $tablet)
			justify-content center
			padding 30px 15px
		@media (max-width $phone)
			justify-content center
			padding 30px 15px 15px 15px

	&__mail-link
		color #000
		font-size 'calc(18 / %s * 1rem)' %($base-font)
		font-weight 500
		line-height 0.72
		text-decoration none
		@media (max-width $tablet)
			font-size 'calc(16 / %s * 1rem)' %($base-font)
		&:hover
			text-decoration underline

		&--tablet
			margin-top 55px
			display none
			@media (max-width $tablet)
				display block
			@media (max-width $phone)
				margin-top 10px

