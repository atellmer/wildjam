@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .news-detail
	position relative
	width 100%
	height auto
	min-height 100vh
	background-color #f4f6f8
	padding 0 0 100px 0

	&__container
		overflow hidden
		padding 0 15px

	&__breadcrumbs
		position relative
		padding 61px 0 48px 0
		@media (max-width $tablet)
			padding 30px 0

	&__title
		text-align left
		margin-bottom 37px
		@media (max-width $phone)
			font-size 'calc(20 / %s * 1rem)' %($base-font)
			margin-bottom 15px

		&--h3
			text-align center
			margin-bottom 40px
			@media (max-width $phone)
				margin-bottom 15px

	&__news-card
		margin-bottom 78px

	&__cards
		position relative
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items stretch
		margin 0 -15px 40px -15px
		padding 20px 0

	&__card
		width calc(33.3333% - 30px)
		height auto
		margin 15px
		transition all .2s ease-in-out
		@media (max-width $notebook)
			width calc(50% - 30px)
		@media (max-width $phone)
			width calc(100% - 30px)

	&__pagination
		position relative
		padding 15px 0

	&__card
		.card__desc
			@media (max-width $phone)
				padding 30px
		&:hover
			box-shadow 0 15px 29px rgba(75, 125, 156, 0.17)

	&__card-date
		color #9c9cac
		font-size 'calc(14 / %s * 1rem)' %($base-font)
		font-weight 400
		margin-bottom 21px

	&__card-title
		color $color-text
		font-size 'calc(18 / %s * 1rem)' %($base-font)
		font-weight 500
		line-height 1.2
		margin-bottom 24px
		@media (max-width $phone)
			font-size 'calc(16 / %s * 1rem)' %($base-font)

	&__card-link
		color $color-primary
		font-size 'calc(16 / %s * 1rem)' %($base-font)
		font-weight 500
		text-decoration underline
		transition color .2s ease-in-out

		&:hover
			color #BDBDBD

.likearts-content .news-card
	position relative
	width 100%
	height auto
	min-height 730px
	background-color #fff
	padding 65px 98px
	@media (max-width 1140px)
		padding 45px
	@media (max-width $notebook)
		padding 45px 30px

	&__header
		position relative
		display flex
		flex-flow row nowrap
		justify-content space-between
		align-items flex-start
		margin-bottom 45px
		@media (max-width $notebook)
			flex-flow column wrap
			align-items center
			margin-bottom 30px

	&__title
		flex-shrink 1
		color $color-text
		font-size 'calc(30 / %s * 1rem)' %($base-font)
		font-weight 900
		margin-right 30px
		@media (max-width $notebook)
			margin-bottom 30px
			margin-right 0
			text-align center
			font-size 'calc(26 / %s * 1rem)' %($base-font)
		@media (max-width $phone)
			font-size 'calc(20 / %s * 1rem)' %($base-font)

	&__social
		flex-shrink 0
		width auto
		height auto
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center

	&__social-link
		display inline-block
		width 30px
		height 30px
		border-radius 50%
		background-size cover
		background-position center
		background-repeat no-repeat
		text-decoration none
		margin 2px
		transition all .2s ease-in-out
		filter grayscale(100%)
		opacity 0.4
		@media (max-width $tablet)
			filter none
			opacity 1

		&:hover
			filter grayscale(0)
			opacity 1

		&--tw
			background-image url('../../images/icons/tw-g.png')

		&--vk
			background-image url('../../images/icons/vk-g.png')

		&--fb
			background-image url('../../images/icons/fb-g.png')

		&--ok
			background-image url('../../images/icons/ok-g.png')

		&--gl
			background-image url('../../images/icons/gl-g.png')

		&--insta
			background-image url('../../images/icons/insta-g.png')

	&__date
		color #9c9cac
		font-size 'calc(14 / %s * 1rem)' %($base-font)
		font-weight 400
		margin-bottom 28px
		@media (max-width $notebook)
			text-align center

	&__content
		display flex
		flex-flow row nowrap
		justify-content space-between
		align-items stretch
		@media (max-width $notebook)
			flex-flow column wrap

	&__text
		flex-shrink 1
		color $color-text
		font-size 'calc(16 / %s * 1rem)' %($base-font)
		line-height 1.63
		font-weight 300
		margin-right 46px
		text-align justify
		@media (max-width $notebook)
			order 1
			margin-right 0
		@media (max-width $phone)
			font-size 'calc(15 / %s * 1rem)' %($base-font)

		p
			margin 0 0 20px 0

		span
			font-weight 500

	&__pic-container
		flex-shrink 0
		@media (max-width $notebook)
			text-align center
			order 0

	&__pic
		width 100%
		height 100%
		max-width 489px
		max-height 320px
		object-fit cover
		transition all .2s ease-in-out

	&__sign
		color #9c9cac
		font-size 'calc(14 / %s * 1rem)' %($base-font)
		font-weight 400
		margin 20px 0

	&__btns
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
		margin 20px 0
		@media (max-width $notebook)
			justify-content center
		@media (max-width $phone)
			display block
			
	&__c-btn
		margin-right 22px
		@media (max-width $tablet)
			justify-content center
			margin-right 0

	&__btn
		box-shadow none
		padding 24px 46px
		font-size 'calc(16 / %s * 1rem)' %($base-font)
		margin 8px
		@media (max-width $phone)
			padding 12px
			font-size 'calc(14 / %s * 1rem)' %($base-font)

		&:hover
			box-shadow 0 17px 32px rgba(62, 188, 255, 0.55)
