@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .case-detail
	position relative
	width 100%
	height auto
	min-height 800px
	background-color #f4f6f8
	padding 0

	&__cover
		position relative
		width 100%
		height auto
		min-height 155px
		background-size cover
		background-position center
		background-repeat no-repeat

		&:before
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color #0c1f2b
			opacity 0.8

	&__container
		overflow hidden
		padding 0 15px

	&__breadcrumbs
		position relative
		padding 61px 0 10px 0
		text-shadow 0 1px 0 rgba(0, 0, 0, 0.5)
		@media (max-width $tablet)
			padding 30px 0

		.wj-breadcrumbs__link
			color #959ea7

		.wj-breadcrumbs__separator
			&:after
				color #EEEEEE

	&__title
		text-align left
		margin-bottom 37px
		text-transform uppercase
		color #fff
		font-size 'calc(60 / %s * 1rem)' %($base-font)
		@media (max-width $phone)
			font-size 'calc(30 / %s * 1rem)' %($base-font)
			margin-bottom 15px

	&__show
		width 100%
		height auto
		background-color transparent
		padding 0 15px
		overflow hidden
