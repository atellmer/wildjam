@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .dots
	position fixed
	top calc(100vh / 2 - 120px)
	right 67px
	z-index 100
	display flex
	flex-flow column wrap
	justify-content center
	align-items center
	@media (max-width $desktop)
		right 30px
	@media (max-width $notebook)
		display none

	&__item
		position relative
		margin 12px 0
		padding 8px
		cursor pointer
		&:before
			content ''
			display inline-block
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			width 5px
			height 5px
			background-color $color-text
			border-radius 50%
			transition all .2s ease-in-out
			transform-origin 70% 70%

		&.js-is-active
			&:before
				transform scale(3)
				background-color $color-primary
