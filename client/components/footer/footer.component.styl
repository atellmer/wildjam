@import 'nib'


//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .footer
	position relative
	width 100%
	height auto
	min-height 198px
	background-color #f6f8f9
	padding 15px 62px
	display flex
	flex-flow row wrap
	justify-content space-between
	align-items center
	@media (max-width 970px)
		flex-flow column wrap
		padding 60px 15px 

	&--white
		background-color #fff

	&__contacts
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
		@media (max-width 1140px)
			flex-flow column wrap
			align-items flex-start
		@media (max-width 970px)
			margin 16px 0
			align-items center

		&--mrg-r
			margin-right 100px
			@media (max-width 1650px)
				margin-right 0

	&__contacts-item
		border-left 5px solid $color-primary
		padding 8px 16px
		color #000
		font-size 'calc(18 / %s * 1rem)' %($base-font)
		font-weight 500
		line-height 0.72
		@media (max-width 970px)
			border-left none
		@media (max-width $tablet)
			font-size 'calc(15 / %s * 1rem)' %($base-font)
			text-align center
			line-height 1.2
		&:first-child
			margin-right 209px
			@media (max-width 1650px)
				margin-right 60px
			@media (max-width 1240px)
				margin-right 0
			@media (max-width 970px)
				margin-bottom 8px

.likearts-content .footer .contacts
	position relative
	display flex
	flex-flow column wrap
	justify-content flex-start
	align-items flex-start
	border-left 5px solid $color-primary
	padding 0 16px
	@media (max-width 1140px)
		justify-content center
	@media (max-width 970px)
		align-items center
		border-left none

	&__phone
		color $color-text
		font-size 'calc(20 / %s * 1rem)' %($base-font)
		font-weight 500
		line-height 0.65
		text-decoration none
		margin-bottom 5px
		@media (max-width $tablet)
			font-size 'calc(16 / %s * 1rem)' %($base-font)
			margin-bottom 10px

	&__link
		color $color-primary
		font-size 'calc(16 / %s * 1rem)' %($base-font)
		font-weight 500
		line-height 1
		text-decoration underline
		@media (max-width 970px)
			line-height 1.75
		@media (max-width $tablet)
			font-size 'calc(14 / %s * 1rem)' %($base-font)

		&:hover
			color #BDBDBD