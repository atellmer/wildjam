@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16

.likearts-content .case-stats
	position relative
	display flex
	flex-flow row nowrap
	justify-content flex-start
	align-items stretch
	@media (max-width $container-width)
		flex-flow row wrap

	&__item
		width calc(50% - 20px)
		@media (max-width $container-width)
			width 100%

	&__separator
		width 1px
		height auto
		min-height 25px
		border-left 1px dotted #000
		margin 0 20px
		@media (max-width $container-width)
			display none

	&__item-count
		color $color-primary
		font-size 'calc(32 / %s * 1rem)' %($base-font)
		font-weight 700
		text-transform uppercase
		max-width 100%
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
		@media (max-width $container-width)
			max-width 100%
			text-align center
		@media (max-width 980px)
			text-align center
			font-size 'calc(30 / %s * 1rem)' %($base-font)

	&__social
		display flex
		flex-flow column wrap
		justify-content space-between
		align-items flex-start
		@media (max-width $container-width)
			margin-top 16px
			flex-flow row wrap
			justify-content center
			align-items center
		@media (max-width 980px)
			justify-content center

	&__social-item
		display flex
		flex-flow row wrap
		justify-content center
		align-items center
		margin-bottom 2px
		@media (max-width $container-width)
			&:first-child
				margin-right 16px

	&__social-count
		flex-grow 1
		color #000
		font-size 'calc(18 / %s * 1rem)' %($base-font)
		font-weight 400
		line-height 1.2
		text-transform uppercase
		margin-top 2px

	&__social-icon
		display inline-block
		width 20px
		height 20px
		background-size cover
		background-repeat no-repeat
		background-position center
		margin-right 12px

		&--like
			background-image url('../../images/icons/svg/like.svg')

		&--comment
			margin-left -2px