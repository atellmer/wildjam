@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16


.likearts-content .wj-breadcrumbs
	position relative
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items center

	&__link
		position relative
		font-size 'calc(14 / %s * 1rem)' %($base-font)
		font-weight 300
		line-height 1.85
		color #898989
		text-decoration none
		margin-top -2px
		transition all .2s ease-in-out
		text-decoration underline
		&:hover
			color $color-text-hint

	&__separator
		&:after
			content '/'
			position relative
			color #898989
			opacity 0.25
			margin 0 16px

	&__link.is-active
		text-decoration none
		background-color #fff
		padding 2px 16px
		border-radius 15px
		box-shadow 0 5px 13px rgba(0, 0, 0, 0.02)