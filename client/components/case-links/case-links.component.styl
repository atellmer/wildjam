@import 'nib'

//colors
$color-primary = #3ebcff
$color-bg = #fff
$color-text = #272757
$color-text-hint = #5c5c85

//resolutions
$phone = 640px
$tablet = 768px
$notebook = 1024px
$desktop = 1600px

//params
$container-width = 1140px
$base-font = 16


.likearts-content .case-links
	width 100%
	height auto
	min-height 109px
	display flex
	flex-flow row wrap
	justify-content space-between
	align-items stretch
	@media (max-width $tablet)
		flex-flow column wrap

	&__item
		width calc(50% - 1px)
		display flex
		flex-flow row wrap
		justify-content center
		align-items center
		text-decoration none
		background-color #fff
		transition all .2s ease-in-out
		padding 30px
		background-size cover
		background-position center
		background-repeat no-repeat
		@media (max-width $tablet)
			width 100%
			border-top 1px solid #e6e6e6
		&:hover
			background-color $color-primary

			.case-links__box-sign
				color #fff

			.case-links__box-name
				color #fff

	&__box
		width 100%
		display flex
		flex-flow column wrap
		justify-content center
		align-items center

	&__box-sign
		flex-shrink 0
		opacity 0.5
		color $color-text
		font-size 'calc(10 / %s * 1rem)' %($base-font)
		font-weight 300
		text-transform uppercase
		transition all .2s ease-in-out
		max-width 100%
		white-space nowrap
		overflow hidden
		text-overflow ellipsis

	&__box-name
		color #000
		font-size 'calc(30 / %s * 1rem)' %($base-font)
		font-weight 700
		text-transform uppercase
		transition all .2s ease-in-out
		max-width 100%
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
		@media (max-width $phone)
			font-size 'calc(20 / %s * 1rem)' %($base-font)

	&__separator
		width 1px
		height auto
		background-color #e6e6e6
		margin 20px 0
		@media (max-width $tablet)
			display none
